@page
@model SourceStacks.Pages.WriteModel
@{
}
<nav>
    <h3>个人资料</h3>
    <hr />
</nav>
<main>
    <section>
        <form action="Write.html" method="post" enctype="multipart/form-data">
            <label>头像：（* 仅限jpg/png/gif）</label><br />
            <input type="text" placeholder="页面提交时上传文件" />
            <input type="file" accept="jpg/png/gif" /><br />
            <label>性别：</label>
            <label>
                <input asp-for="NewUser.IsMale" value="true" checked />男
            </label>
            <label>
                <input asp-for="NewUser.IsMale" value="false" />女
            </label><br />
            <label>生日：</label><br />
            <select>
                <option value="----">----</option>
                <option value="2000">2000</option>
                <option value="1999">1999</option>
                <option value="1998">1998</option>
                <option value="1997">1997</option>
                <option value="1996">1996</option>
                <option value="1995">1995</option>
                <option value="1994">1994</option>
                <option value="1993">1993</option>
                <option value="1992">1992</option>
                <option value="1991">1991</option>
                <option value="1990">1990</option>
            </select>
            <span>年</span>
            <select>
                <option value="--">--</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
            </select>
            <span>月</span>
            <select>
                <option value="--">--</option>
                <option value="白羊座">白羊座</option>
                <option value="金牛座">金牛座</option>
                <option value="双子座">双子座</option>
                <option value="巨蟹座">巨蟹座</option>
                <option value="狮子座">狮子座</option>
                <option value="处女座">处女座</option>
                <option value="天秤座">天秤座</option>
                <option value="天蝎座">天蝎座</option>
                <option value="射手座">射手座</option>
                <option value="魔蝎座">魔蝎座</option>
                <option value="水瓶座">水瓶座</option>
                <option value="双鱼座">双鱼座</option>
            </select>
            <span>星座</span><br />
            <label>关键字：（*使用空格分隔）</label><br />
            <label>---1级---</label>
            <select>
                <option>编程开发语言</option>
                <option>工具软件</option>
                <option>顾问资讯</option>
                <option>操作系统</option>
            </select>
            <label>---2级---</label>
            <select>
                <option>C#</option>
                <option>JAVA</option>
                <option>Javascript</option>
                <option>html</option>
                <option>Python</option>
                <option>SQL</option>
                <option>CSS</option>
                <option>PHP</option>
                <option>C++</option>
                <option>C</option>
            </select>
            <label><input type="text" name="UserKeyword" placeholder="自定义关键字" /></label>
            <!--<ul>
                <li>编程开发语言</li>
                <li>工具软件</li>
                <li>顾问咨询</li>
                <li>操作系统</li>
            </ul>-->
            <br />
            <label>自我介绍：</label><br />
            <textarea name="seifDescription" placeholder="简单的介绍一下自己吧，不超过255字" cols="20" rows="8"></textarea>
            <br />
            <input type="submit" name="UserMaterial" value="提交" />
        </form>
    </section>
    <section>
        <ul>
            <!--这里本来是个？号的，现在是个方形的点点-->
            <li style="list-style:square  ;color:blue">说明</li>
        </ul>
        <ol>
            <li>头像仅接受jpg/png/gif格式，大小不超过256KB。</li>
            <li>头像图片的建议宽度为300像素左右，过宽或过窄都有可能失真。</li>
            <li> 自我介绍的字数不要超过255字。</li>
        </ol>

    </section>
</main>